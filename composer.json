{
    "name": "bissolli/php-match-card-game",
    "description": "Simple card game built in PHP that let players have fun playing against each other. Wins who gets its own hand empty first!",
    "keywords": [ "card game", "php" ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gustavo Bissolli",
            "email": "gustavo.bissolli@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "mockery/mockery": "~0.9|~1.0",
        "phpunit/phpunit": "5.5.*|6.0.*|7.0.*"
    },
    "autoload": {
        "psr-4": {
            "Bissolli\\CardGame\\": "src/"
        },
        "files": [
            "src/Helpers/Debug.php"
        ]
    },
    "autoload-dev": {
        "classmap": ["tests/TestCase.php"]
    }
}
